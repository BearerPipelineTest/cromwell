<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog objectQuotingStrategy="QUOTE_ALL_OBJECTS"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="rhpvorderman" id="sqlite-engine-init" dbms="sqlite">
        <createTable tableName="CALL_CACHING_AGGREGATION_ENTRY">
            <column autoIncrement="true" name="CALL_CACHING_AGGREGATION_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_CALL_CACHING_AGGREGATION_ENTRY"/>
            </column>
            <column name="CALL_CACHING_ENTRY_ID" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="FK_CALL_CACHING_AGGREGATION_ENTRY_CALL_CACHING_ENTRY_ID"
                             referencedColumnNames="CALL_CACHING_ENTRY_ID"
                             referencedTableName="CALL_CACHING_ENTRY"/>
            </column>
            <column name="BASE_AGGREGATION" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="INPUT_FILES_AGGREGATION" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="CALL_CACHING_DETRITUS_ENTRY">
            <column autoIncrement="true" name="CALL_CACHING_DETRITUS_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_CALL_CACHING_DETRITUS_ENTRY"/>
            </column>
            <column name="DETRITUS_KEY" type="VARCHAR(255)">
                <constraints nullable="false"
                             uniqueConstraintName="UC_CALL_CACHING_DETRITUS_ENTRY_CCEI_DK" unique="true"/>
            </column>
            <column name="DETRITUS_VALUE" type="CLOB"/>
            <column name="CALL_CACHING_ENTRY_ID" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="FK_CALL_CACHING_DETRITUS_ENTRY_CALL_CACHING_ENTRY_ID"
                             referencedColumnNames="CALL_CACHING_ENTRY_ID"
                             referencedTableName="CALL_CACHING_ENTRY"
                             uniqueConstraintName="UC_CALL_CACHING_DETRITUS_ENTRY_CCEI_DK"
                             unique="true"/>
            </column>
        </createTable>

        <createTable tableName="CALL_CACHING_ENTRY">
            <column autoIncrement="true" name="CALL_CACHING_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_CALL_CACHING_ENTRY"/>
            </column>
            <column name="WORKFLOW_EXECUTION_UUID" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_CALL_CACHING_ENTRY_WEU_CFQN_JI" unique="true"/>
            </column>
            <column name="CALL_FULLY_QUALIFIED_NAME" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_CALL_CACHING_ENTRY_WEU_CFQN_JI" unique="true"/>
            </column>
            <column name="JOB_INDEX" type="INTEGER">
                <constraints nullable="false" uniqueConstraintName="UC_CALL_CACHING_ENTRY_WEU_CFQN_JI" unique="true"/>
            </column>
            <column name="RETURN_CODE" type="INT"/>
            <column defaultValueBoolean="true" name="ALLOW_RESULT_REUSE" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="NULL" name="JOB_ATTEMPT" type="INTEGER"/>
        </createTable>

        <createTable tableName="CALL_CACHING_HASH_ENTRY">
            <column autoIncrement="true" name="CALL_CACHING_HASH_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_CALL_CACHING_HASH_ENTRY"/>
            </column>
            <column name="HASH_KEY" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_CALL_CACHING_HASH_ENTRY_CCEI_HK" unique="true"/>
            </column>
            <column name="HASH_VALUE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CALL_CACHING_ENTRY_ID" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="FK_CALL_CACHING_HASH_ENTRY_CALL_CACHING_ENTRY_ID"
                             referencedColumnNames="CALL_CACHING_ENTRY_ID"
                             referencedTableName="CALL_CACHING_ENTRY"
                             uniqueConstraintName="UC_CALL_CACHING_HASH_ENTRY_CCEI_HK"
                             unique="true"/>
            </column>
        </createTable>

        <createTable tableName="CALL_CACHING_SIMPLETON_ENTRY">
            <column autoIncrement="true" name="CALL_CACHING_SIMPLETON_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_CALL_CACHING_SIMPLETON_ENTRY"/>
            </column>
            <column name="SIMPLETON_KEY" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_CALL_CACHING_SIMPLETON_ENTRY_CCEI_SK" unique="true"/>
            </column>
            <column name="SIMPLETON_VALUE" type="CLOB"/>
            <column name="WDL_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CALL_CACHING_ENTRY_ID" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="FK_CALL_CACHING_SIMPLETON_ENTRY_CALL_CACHING_ENTRY_ID"
                             referencedColumnNames="CALL_CACHING_ENTRY_ID"
                             referencedTableName="CALL_CACHING_ENTRY"
                             uniqueConstraintName="UC_CALL_CACHING_SIMPLETON_ENTRY_CCEI_SK" unique="true"/>
            </column>
        </createTable>

        <createTable tableName="DOCKER_HASH_STORE_ENTRY">
            <column autoIncrement="true" name="DOCKER_HASH_STORE_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_DOCKER_HASH_STORE_ENTRY"/>
            </column>
            <column name="WORKFLOW_EXECUTION_UUID" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_DOCKER_HASH_STORE_ENTRY_WEU_DT" unique="true"/>
            </column>
            <column name="DOCKER_TAG" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_DOCKER_HASH_STORE_ENTRY_WEU_DT" unique="true"/>
            </column>
            <column name="DOCKER_HASH" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="NULL" name="DOCKER_SIZE" type="INTEGER"/>
        </createTable>

        <createTable tableName="JOB_KEY_VALUE_ENTRY">
            <column autoIncrement="true" name="JOB_KEY_VALUE_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_JOB_KEY_VALUE_ENTRY"/>
            </column>
            <column name="WORKFLOW_EXECUTION_UUID" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_KEY_VALUE_ENTRY_WEU_CFQN_JI_JA_SK" unique="true"/>
            </column>
            <column name="CALL_FULLY_QUALIFIED_NAME" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_KEY_VALUE_ENTRY_WEU_CFQN_JI_JA_SK" unique="true"/>
            </column>
            <column name="JOB_INDEX" type="INTEGER">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_KEY_VALUE_ENTRY_WEU_CFQN_JI_JA_SK" unique="true"/>
            </column>
            <column name="JOB_ATTEMPT" type="INTEGER">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_KEY_VALUE_ENTRY_WEU_CFQN_JI_JA_SK" unique="true"/>
            </column>
            <column name="STORE_KEY" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_KEY_VALUE_ENTRY_WEU_CFQN_JI_JA_SK" unique="true"/>
            </column>
            <column name="STORE_VALUE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="JOB_STORE_ENTRY">
            <column autoIncrement="true" name="JOB_STORE_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_JOB_STORE_ENTRY"/>
            </column>
            <column name="WORKFLOW_EXECUTION_UUID" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_STORE_ENTRY_WEU_CFQN_JI_JA" unique="true"/>
            </column>
            <column name="CALL_FULLY_QUALIFIED_NAME" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_STORE_ENTRY_WEU_CFQN_JI_JA" unique="true"/>
            </column>
            <column name="JOB_INDEX" type="INTEGER">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_STORE_ENTRY_WEU_CFQN_JI_JA" unique="true"/>
            </column>
            <column name="JOB_ATTEMPT" type="INTEGER">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_STORE_ENTRY_WEU_CFQN_JI_JA" unique="true"/>
            </column>
            <column name="JOB_SUCCESSFUL" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="RETURN_CODE" type="INTEGER"/>
            <column name="EXCEPTION_MESSAGE" type="CLOB"/>
            <column name="RETRYABLE_FAILURE" type="BOOLEAN"/>
        </createTable>

        <createTable tableName="JOB_STORE_SIMPLETON_ENTRY">
            <column autoIncrement="true" name="JOB_STORE_SIMPLETON_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_JOB_STORE_SIMPLETON_ENTRY"/>
            </column>
            <column name="SIMPLETON_KEY" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_JOB_STORE_SIMPLETON_ENTRY_JSEI_SK" unique="true"/>
            </column>
            <column name="SIMPLETON_VALUE" type="CLOB"/>
            <column name="WDL_TYPE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="JOB_STORE_ENTRY_ID" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="FK_JOB_STORE_SIMPLETON_ENTRY_JOB_STORE_ENTRY_ID"
                             referencedColumnNames="JOB_STORE_ENTRY_ID"
                             referencedTableName="JOB_STORE_ENTRY"
                             deleteCascade="true"
                             uniqueConstraintName="UC_JOB_STORE_SIMPLETON_ENTRY_JSEI_SK"
                             unique="true"/>
            </column>
        </createTable>

        <createTable tableName="SUB_WORKFLOW_STORE_ENTRY">
            <column autoIncrement="true" name="SUB_WORKFLOW_STORE_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_SUB_WORKFLOW_STORE_ENTRY"/>
            </column>
            <column name="ROOT_WORKFLOW_ID" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="FK_SUB_WORKFLOW_STORE_ENTRY_ROOT_WORKFLOW_ID"
                             referencedColumnNames="WORKFLOW_STORE_ENTRY_ID"
                             referencedTableName="WORKFLOW_STORE_ENTRY"
                             deleteCascade="true"/>
            </column>
            <column name="PARENT_WORKFLOW_EXECUTION_UUID" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_SUB_WORKFLOW_STORE_ENTRY_PWEU_CFQN_CI_CA" unique="true"/>
            </column>
            <column name="CALL_FULLY_QUALIFIED_NAME" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_SUB_WORKFLOW_STORE_ENTRY_PWEU_CFQN_CI_CA" unique="true"/>
            </column>
            <column name="CALL_INDEX" type="INTEGER">
                <constraints nullable="false" uniqueConstraintName="UC_SUB_WORKFLOW_STORE_ENTRY_PWEU_CFQN_CI_CA" unique="true"/>
            </column>
            <column name="CALL_ATTEMPT" type="INTEGER">
                <constraints nullable="false" uniqueConstraintName="UC_SUB_WORKFLOW_STORE_ENTRY_PWEU_CFQN_CI_CA" unique="true"/>
            </column>
            <column name="SUB_WORKFLOW_EXECUTION_UUID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="WORKFLOW_STORE_ENTRY">
            <column autoIncrement="true" name="WORKFLOW_STORE_ENTRY_ID" type="INTEGER">
                <constraints primaryKey="true" primaryKeyName="PK_WORKFLOW_STORE_ENTRY"/>
            </column>
            <column name="WORKFLOW_EXECUTION_UUID" type="VARCHAR(255)">
                <constraints nullable="false" uniqueConstraintName="UC_WORKFLOW_STORE_ENTRY_WEU" unique="true"/>
            </column>
            <column name="WORKFLOW_DEFINITION" type="CLOB"/>
            <column name="WORKFLOW_INPUTS" type="CLOB"/>
            <column name="WORKFLOW_OPTIONS" type="CLOB"/>
            <column name="WORKFLOW_STATE" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="SUBMISSION_TIME" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="IMPORTS_ZIP" type="BLOB"/>
            <column name="CUSTOM_LABELS" type="CLOB">
                <constraints nullable="false"/>
            </column>
            <column name="WORKFLOW_TYPE" type="VARCHAR(30)"/>
            <column name="WORKFLOW_TYPE_VERSION" type="VARCHAR(255)"/>
            <column name="WORKFLOW_ROOT" type="VARCHAR(100)"/>
            <column name="CROMWELL_ID" type="VARCHAR(100)"/>
            <column name="HEARTBEAT_TIMESTAMP" type="DATETIME"/>
            <column name="WORKFLOW_URL" type="VARCHAR(2000)"/>
            <column name="HOG_GROUP" type="VARCHAR(100)"/>
        </createTable>

        <createIndex indexName="IX_CALL_CACHING_AGGREGATION_ENTRY_BA_IFA" tableName="CALL_CACHING_AGGREGATION_ENTRY">
            <column name="BASE_AGGREGATION"/>
            <column name="INPUT_FILES_AGGREGATION"/>
        </createIndex>

        <createIndex indexName="IX_JOB_STORE_ENTRY_WEU" tableName="JOB_STORE_ENTRY">
            <column name="WORKFLOW_EXECUTION_UUID"/>
        </createIndex>

        <createIndex indexName="IX_SUB_WORKFLOW_STORE_ENTRY_PWEU" tableName="SUB_WORKFLOW_STORE_ENTRY">
            <column name="PARENT_WORKFLOW_EXECUTION_UUID"/>
        </createIndex>

        <createIndex indexName="IX_WORKFLOW_STORE_ENTRY_WS" tableName="WORKFLOW_STORE_ENTRY">
            <column name="WORKFLOW_STATE"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>
